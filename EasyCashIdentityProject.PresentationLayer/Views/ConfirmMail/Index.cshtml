@model ConfirmMailViewModel

@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br />
    <br />
<form method="post" >
    <h2>Taşınan Mail Adresi: </h2>
        <input type="text" class="form-control" asp-for="Id" value="@ViewBag.v"  />
    <br />
    <label>Enter the 6-digit code sent to your email address</label>
    <input type="text" class="form-control" asp-for="ConfirmCode" />
    <br />
    <button class="btn btn-primary">Activate Account</button>
</form>
</div>